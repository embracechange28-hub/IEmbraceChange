{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ArticleResponse",
  "type": "object",
  "required": [
    "id",
    "slug",
    "title",
    "reading_time_min"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "excerpt": {
      "type": "string"
    },
    "body_html": {
      "type": "string"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "reading_time_min": {
      "type": "integer"
    },
    "published_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": true
}