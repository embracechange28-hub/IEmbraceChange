{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.iembracechange.com/analytics.event.json",
  "title": "IEC Analytics Event",
  "description": "Generic analytics event envelope. Enforces specific shape for `auth_login` events (success + landing enum).",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event",
    "timestamp"
  ],
  "properties": {
    "event": {
      "type": "string",
      "description": "Event name, e.g. 'auth_login', 'menotracker_log_submitted', 'dashboard_viewed'."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp, e.g., 2025-08-20T16:05:00Z"
    },
    "properties": {
      "type": "object",
      "description": "Event-specific properties. Open by default for forward compatibility. Specific events may be constrained via conditional subschemas.",
      "additionalProperties": true
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "event": {
            "const": "auth_login"
          }
        },
        "required": [
          "event"
        ]
      },
      "then": {
        "properties": {
          "properties": {
            "type": "object",
            "required": [
              "success",
              "landing"
            ],
            "properties": {
              "success": {
                "type": "boolean",
                "description": "Whether the login attempt succeeded."
              },
              "landing": {
                "type": "string",
                "enum": [
                  "redirect",
                  "menotracker",
                  "dashboard"
                ],
                "description": "Where the user landed after login."
              }
            },
            "additionalProperties": false
          }
        }
      }
    }
  ],
  "examples": [
    {
      "event": "auth_login",
      "timestamp": "2025-08-20T16:05:00Z",
      "properties": {
        "success": true,
        "landing": "dashboard"
      }
    },
    {
      "event": "menotracker_log_submitted",
      "timestamp": "2025-08-20T16:02:00Z",
      "properties": {
        "has_reflection": true,
        "symptom_count": 2
      }
    }
  ]
}